---
// Button.astro
import arrowIcon from '../../public/arrow.webp';

interface Props {
  type: 'button';
  icon?: 'arrow';
  text: string;
  className?: string;
  iconClassName?: string;
}

const {
  type = 'button',
  text,
  icon,
  className = '',
  iconClassName = '',
} = Astro.props;

// Map the icon types to their corresponding image sources using the `src` property
const iconMap: Record<string, string> = {
  arrow: arrowIcon.src,
};
---

<button
  type={type}
  class={`flex min-w-12 items-center gap-2 rounded-sm border-2 border-charcoal dark:border-pearl px-4 py-2 shadow-[3px_3px_0px_1px] shadow-charcoal dark:shadow-pearl ${className}`}
>
  {
    icon && iconMap[icon] && (
      <img
        class={`w-4 ${iconClassName}`}
        src={iconMap[icon]}
        alt={`${icon} icon`}
      />
    )
  }
  {text}
</button>
