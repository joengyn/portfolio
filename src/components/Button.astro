---
import arrowIcon from '../../public/arrow.webp';

interface Props {
  type: 'button';
  icon?: 'arrow';
  text: string;
  variant?: 'light' | 'dark';
  className?: string;
  iconClassName?: string;
}

const {
  type = 'button',
  text,
  icon,
  variant = 'light',
  className = '',
  iconClassName = '',
} = Astro.props;

// Map the icon types to their corresponding image sources using the `src` property
const iconMap: Record<string, string> = {
  arrow: arrowIcon.src,
};

// Variant styles with responsive dark mode
const variantStyles = {
  light: 'bg-white text-black border-2 border-black dark:bg-black dark:text-white dark:border-white',
  dark: 'bg-black text-white border-2 border-white',
};
---

<button
  type={type}
  class={`flex min-w-12 items-center gap-2 rounded-sm px-4 py-2 ${variantStyles[variant]} ${className}`}
>
  {
    icon && iconMap[icon] && (
      <img
        class={`w-4 ${variant === 'light' ? 'dark:invert' : ''} ${iconClassName}`}
        src={iconMap[icon]}
        alt={`${icon} icon`}
      />
    )
  }
  {text}
</button>

<style>
  button {
    transition: all 250ms ease-out;
  }

  button:hover {
    box-shadow: 0 8px 16px rgba(15, 14, 13, 0.15);
    transform: translateY(-2px);
  }

  :global(.dark) button:hover {
    box-shadow: 0 8px 16px rgba(250, 248, 243, 0.1);
  }

  button:active {
    transform: scale(0.98);
    box-shadow: 0 2px 4px rgba(15, 14, 13, 0.08);
  }

  :global(.dark) button:active {
    box-shadow: 0 2px 4px rgba(250, 248, 243, 0.05);
  }
</style>
